<div class="container">
  <div class="text-center mt-5">
    <h1>When do you want to book <%= @broomstick.name %> for?</h1>
  </div>

  <div class="d-flex justify-content-center">
    <%= simple_form_for [@broomstick, @user, @booking] do |f| %>
      <div class="input-box my-3">
        <%= f.input :start_date, as: :date, html5: true %>
      </div>

      <div class="input-box my-3">
        <%= f.input :end_date, as: :date, html5: true %>
      </div>

      <div class="mt-5" id="submit-btn">
        <%= f.submit "Submit booking", class: "btn btn-black" %>
      </div>

      <div class="my-3" id="cancel-btn">
        <%= link_to "Cancel", broomstick_path(@broomstick) %>
      </div>
    <% end %>
  </div>
</div>
