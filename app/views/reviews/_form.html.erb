 <div class="d-flex flex-column">
  <%= simple_form_for([@broomstick, @review],
    data: {
      insert_in_list_target: "form",
      action: "submit->insert-in-list#send"
    }) do |f|
    %>
    <div class="review-content">
      <div class="input-box my-3">
        <%= f.input :content %>
      </div>

      <div class="mt-5">
      <%= f.submit "Submit", class: "btn btn-light row-form-btn" %>
      </div>
    </div>

  <% end %>
</div>
